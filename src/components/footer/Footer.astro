---
const socialLinks = [
  {
    name: "Instagram",
    url: "#",
  },
  {
    name: "Facebook",
    url: "#",
  },
  {
    name: "Twitter",
    url: "#",
  },
];
---

<footer>
  <h2>Social</h2>
  <nav>
    {socialLinks.map(({ name, url }) => <a href={url}>{name}</a>)}
  </nav>
</footer>

<style>
  footer {
    background-color: var(--black);
    min-height: 100vh;
    color: var(--white);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
  }

  h2 {
    font-family: var(--font-primary);
    text-transform: uppercase;
  }

  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
  }

  a {
    color: var(--white);
    text-decoration: none;
  }

  @media (min-width: 768px) {
    footer {
      width: 100%;
      min-width: 40vw;
      margin: 0;
      padding: 0;
    }
  }
</style>
