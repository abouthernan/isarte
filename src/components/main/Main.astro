---
import heroSmall from "../../assets/images/hero/hero-small.webp";
import heroFull from "../../assets/images/hero/hero-full.webp";
import Header from "../../components/header/Header.astro";
import { Slider } from "./Slider.jsx";
---

<Header />
<main>
  <picture>
    <source media="(max-width: 767px)" srcset={heroSmall} />
    <source media="(min-width: 768px)" srcset={heroFull} />
    <img
      src={heroFull}
      alt="puede ser una imagen de una obra de arte de isarte"
    />
  </picture>

  <h1 class="hero__title">Portafolio</h1>

  <Slider client:load />

</main>

<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  picture,
  :global(.slider-picture) {
    height: 44.2rem;
    width: 100%;
    overflow: hidden;
    display: block;
  }

  :global(.slider) {
    width: 100%;
    height: 100%;
  }

  img,
  :global(.slider-picture img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__title {
    color: var(--black);
    text-transform: uppercase;
    font-family: var(--font-secondary);
    font-weight: 100;
    font-size: var(--font-xl);
    padding: 1rem 0;
  }

  @media (min-width: 768px) {
    main {
      flex-direction: row;
      min-width: 100vw;
      scroll-snap-align: start;
    }

    .hero__title {
      font-size: var(--font-xl);
      writing-mode: vertical-rl;
      -webkit-writing-mode: vertical-rl;
      -ms-writing-mode: vertical-rl;
      transform: rotate(180deg);
      padding: 0;
    }

    picture,
    :global(.slider-picture) {
      height: 100vh;
    }

    :global(.slider .control-dots) {
      top: calc(100vh - 5rem);
    }
  }
</style>
