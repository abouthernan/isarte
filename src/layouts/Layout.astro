---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Syne";
    font-style: normal;
    font-weight: 700;
    src: local("Open Sans"), url("/fonts/Syne-bold.woff2") format("woff2"),
      url("/fonts/Syne-bold.ttf") format("truetype");
  }

  @font-face {
    font-family: "Cormorant Infant";
    font-style: normal;
    font-weight: 400;
    src: local("Cormorant Infant"),
      url("/fonts/CormorantInfant-Regular.woff2") format("woff2"),
      url("/fonts/CormorantInfant-Regular.ttf") format("truetype");
  }

  :root {
    --white: #fff;
    --black: #212121;
    /* fonts */
    --font-primary: "Syne", sans-serif;
    --font-secondary: "Cormorant Infant", serif;
    --font-body: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    /* font-size */
    --font-sm: 1.4rem;
    --font-base: 1.6rem;
    --font-md: 1.9rem;
    --font-lg: 4rem;
    --font-xl: 5rem;
  }

  @media (min-width: 768px) {
    :root {
      --font-sm: 1.6rem;
      --font-base: 1.8rem;
      --font-md: 2.1rem;
      --font-lg: 6rem;
      --font-xl: clamp(6rem, 10vw, 10rem);
    }
  }

  html {
    box-sizing: border-box;
    font-size: 62.5%;
    scroll-behavior: smooth;
  }

  *,
  *:before,
  *:after {
    box-sizing: inherit;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    font-size: var(--font-base);
    overflow-x: hidden;
  }

  .container {
    max-width: 120rem;
    margin: 0 auto;
    padding: 0 2.7rem;
  }

  @media (min-width: 768px) {
    body {
      overflow-x: auto;
      overflow-y: hidden;
      display: flex;
      max-height: 100vh;
      min-width: 100vw;
      scroll-snap-type: x mandatory;
    }

    ::-webkit-scrollbar {
      width: 1rem;
      height: 1rem;
    }

    ::-webkit-scrollbar-track {
      background: transparent;
    }

    ::-webkit-scrollbar-thumb {
      background: var(--black);
    }
  }
</style>

<script lang="js">
document.addEventListener("DOMContentLoaded", () => {
  document.body.addEventListener(
    "wheel",
    (event) => {
      let delta = Math.sign(event.deltaY || -event.detail);
      window.scrollBy({
        left: delta * 100,
      });

      event.preventDefault();
    },
    { passive: false }
  );
});
</script>
